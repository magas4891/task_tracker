<%= turbo_frame_tag dom_id(category) do %>
  <p>
    <strong>Name:</strong>
    <%= link_to category.name, category_path(category), data: { turbo_frame: '_top' } %>
  </p>
  <p>
    <strong>Count of tasks:</strong>
    <%= category.tasks.count %>
  </p>

  <%= link_to 'Edit', edit_category_path(category) %>
  <%= button_to 'Delete', category, method: :delete %>
<% end %>
