<h1>Dashboard</h1>

<div id='categories' class='d-flex gap-3 x-overflow-scrolling'>
  <%= render 'categories/uncategorized_tasks' %>
  <div id='namedCategories' class='d-flex gap-3' data-controller='sortable' data-sortable-target='categories'>
    <% @categories.each do |category| %>
      <%= render 'categories/category', category: category %>
    <% end %>
  </div>
</div>
